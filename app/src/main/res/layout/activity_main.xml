<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:layout_marginTop="60dp"
        android:fillViewport="true">

    <LinearLayout
        android:id="@+id/firstLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:paddingRight="10dp"
        >

        <Button
            android:id="@+id/edit"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/button_format"
            android:backgroundTint="#04ccbb"
            android:paddingLeft="50dp"
            android:gravity="left|center_vertical"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:drawableRight="@drawable/pantry"
            android:paddingRight="50dp"
            android:text="Pantry"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/camera"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/button_format"
            android:backgroundTint="#0a9bb5"
            android:text="Camera"
            android:paddingLeft="50dp"
            android:gravity="left|center_vertical"
            android:drawableRight="@drawable/camera"
            android:paddingRight="50dp"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"/>


        <Button
            android:id="@+id/barcode"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/button_format"
            android:textColor="#FFFFFF"
            android:backgroundTint="#0a73b5"
            android:paddingLeft="50dp"
            android:gravity="left|center_vertical"
            android:drawableRight="@drawable/barcode"
            android:paddingRight="50dp"
            android:textSize="20sp"
            android:text="Barcode"
            android:textAllCaps="false"
            />

        <Button
            android:id="@+id/receiptBtn"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/button_format"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1a64cc"
            android:paddingLeft="50dp"
            android:gravity="left|center_vertical"
            android:drawableRight="@drawable/menu"
            android:paddingRight="50dp"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:text="Receipt" />

        <Button
            android:id="@+id/shopping"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/button_format"
            android:textColor="#FFFFFF"
            android:paddingLeft="50dp"
            android:gravity="left|center_vertical"
            android:drawableRight="@drawable/shopping"
            android:paddingRight="50dp"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:text="Shopping List" />

        <Button
            android:id="@+id/help"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/button_format"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1a40cc"
            android:paddingLeft="50dp"
            android:drawableRight="@drawable/help"
            android:paddingRight="50dp"
            android:gravity="left|center_vertical"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:text="Help" />

    </LinearLayout>
    </ScrollView>

</RelativeLayout>